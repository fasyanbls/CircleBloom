<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Preferences"
            android:textColor="@color/pastel_purple"
            android:textSize="@dimen/text_size_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:text="How do you like to study?"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body" />

        <!-- Learning Style -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Learning Style"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupLearningStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:chipSpacingHorizontal="@dimen/spacing_small"
            app:singleSelection="true" />

        <!-- Pace -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Preferred Pace"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupPace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium">

            <RadioButton
                android:id="@+id/rbSlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slow and Steady"
                android:textColor="@color/text_primary" />

            <RadioButton
                android:id="@+id/rbModerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderate"
                android:textColor="@color/text_primary" />

            <RadioButton
                android:id="@+id/rbFast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast-paced"
                android:textColor="@color/text_primary" />

        </RadioGroup>

        <!-- Group Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Group Size Preference"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupGroupSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium">

            <RadioButton
                android:id="@+id/rbOneOnOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-on-1"
                android:textColor="@color/text_primary" />

            <RadioButton
                android:id="@+id/rbSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Group (2-4)"
                android:textColor="@color/text_primary" />

            <RadioButton
                android:id="@+id/rbMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Group (5+)"
                android:textColor="@color/text_primary" />

        </RadioGroup>

        <!-- Study Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Preferred Study Time"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupStudyTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:chipSpacingHorizontal="@dimen/spacing_small"
            app:singleSelection="false" />

        <!-- Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Session Duration"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:chipSpacingHorizontal="@dimen/spacing_small"
            app:singleSelection="false" />

    </LinearLayout>

</ScrollView>
