<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRecommendedMatch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivMatchProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMatchName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvMatchScore"
        app:layout_constraintStart_toEndOf="@+id/ivMatchProfile"
        app:layout_constraintTop_toTopOf="@+id/ivMatchProfile"
        tools:text="Jane Doe" />

    <TextView
        android:id="@+id/tvMatchMajor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="@+id/tvMatchName"
        app:layout_constraintStart_toStartOf="@+id/tvMatchName"
        app:layout_constraintTop_toBottomOf="@+id/tvMatchName"
        tools:text="Computer Science" />

    <TextView
        android:id="@+id/tvMatchReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/pastel_purple_dark"
        app:layout_constraintEnd_toEndOf="@+id/tvMatchName"
        app:layout_constraintStart_toStartOf="@+id/tvMatchName"
        app:layout_constraintTop_toBottomOf="@+id/tvMatchMajor"
        tools:text="Connects on: Android, Kotlin" />

    <TextView
        android:id="@+id/tvMatchScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pastel_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="98%" />

</androidx.constraintlayout.widget.ConstraintLayout>
