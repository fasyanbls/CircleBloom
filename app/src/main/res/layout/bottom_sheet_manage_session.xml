<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    android:background="@drawable/bg_bottom_sheet">

    <TextView
        android:id="@+id/tvSessionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Title"
        android:textSize="@dimen/text_size_heading"
        android:textStyle="bold"
        android:textColor="@color/pastel_purple"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <!-- New End Session Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEndSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Session"
        android:textColor="@color/text_white"
        android:backgroundTint="@color/error"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="@dimen/spacing_medium">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditSession"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="Edit Details"
            android:textColor="@color/pastel_purple"
            app:strokeColor="@color/pastel_purple"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteSession"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="Delete"
            android:textColor="@color/error"
            app:strokeColor="@color/error"/>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginVertical="@dimen/spacing_small"/>

    <!-- Accepted Members Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accepted Members"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAcceptedMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:clipToPadding="false"/>
        
    <TextView
        android:id="@+id/tvNoAcceptedMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No accepted members yet"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:padding="@dimen/spacing_medium"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginVertical="@dimen/spacing_small"/>

    <!-- Participant Requests Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Participant Requests"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:clipToPadding="false"/>
        
    <TextView
        android:id="@+id/tvNoRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pending requests"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:padding="@dimen/spacing_medium"
        android:visibility="gone"/>

</LinearLayout>
