<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="96dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- Welcome Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_back"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:text="@string/app_tagline"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_body" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Stats -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/quick_stats"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Sessions Completed -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_small"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/pastel_pink_light"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tvSessionsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/pastel_pink_dark"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:text="@string/sessions_completed"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Hours -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_tiny"
                android:layout_marginEnd="@dimen/spacing_tiny"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/pastel_purple_light"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tvStudyHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/pastel_purple_dark"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:text="@string/study_hours"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Streak -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/pastel_blue_light"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tvStreakDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/pastel_blue_dark"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:text="@string/current_streak"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Study Timer -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Study Session"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:textColor="@color/pastel_purple_dark"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartStudy"
                        style="@style/Widget.CircleBloom.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        app:icon="@drawable/ic_play_arrow" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPauseStudy"
                        style="@style/Widget.CircleBloom.Button.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:text="Pause"
                        android:visibility="gone"
                        app:icon="@drawable/ic_pause" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStopStudy"
                        style="@style/Widget.CircleBloom.Button.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:text="Stop"
                        android:visibility="gone"
                        app:icon="@drawable/ic_stop" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Upcoming Sessions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/upcoming_sessions"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <!-- Empty State -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNoSessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xlarge">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_sessions"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Upcoming Sessions RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUpcomingSessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />
        
        <!-- See More Sessions -->
        <TextView
            android:id="@+id/tvSeeMoreSessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="See more →"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:visibility="gone" />


        <!-- Recommended Matches -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/recommended_matches"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />


        <!-- Empty State for No Matches -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNoMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xlarge">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_matches_found"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recommended Matches RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecommendedMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />
        
        <!-- See More Matches -->
        <TextView
            android:id="@+id/tvSeeMoreMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="See more →"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
