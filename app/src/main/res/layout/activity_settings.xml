<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F4F8"
    tools:context=".views.activities.SettingsActivity">

    <!-- Header Style LinkedIn/Tinder: Putih dengan Shadow tipis -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="1dp"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:title="Settings"
            app:titleTextColor="@android:color/black"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            app:navigationIcon="@drawable/ic_back"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- SECTION TITLE: ACCOUNT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCOUNT SETTINGS"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <!-- GROUP 1: ACCOUNT (White Block) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:divider="?android:attr/listDivider"
                android:showDividers="middle">

                <!-- Edit Profile -->
                <LinearLayout
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit Profile"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BDBDBD"/>
                </LinearLayout>

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Password"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BDBDBD"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SECTION TITLE: DISCOVERY & VISIBILITY -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VISIBILITY &amp; NOTIFICATIONS"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <!-- GROUP 2: VISIBILITY (White Block) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:divider="?android:attr/listDivider"
                android:showDividers="middle">

                <!-- Switch: Show Profile (Like Tinder "Show me on Tinder") -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/lblVisibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show me on CircleBloom"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblVisibility"
                        android:text="Turn off to hide from search results"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="2dp"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchProfileVisibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <!-- Switch: Email Visibility -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Email Address"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_centerVertical="true"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchShowEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <!-- Switch: Push Notifications -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Push Notifications"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_centerVertical="true"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>

            <!-- SECTION TITLE: LEGAL & SUPPORT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <!-- GROUP 3: SUPPORT (White Block) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:divider="?android:attr/listDivider"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/layoutHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Help &amp; Support"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BDBDBD"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="About App"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BDBDBD" />
                </LinearLayout>
            </LinearLayout>

            <!-- LOGOUT BUTTON (Tinder/LinkedIn Style: Big Center Button) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:text="Log Out"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#212121"
                app:cornerRadius="28dp"
                app:elevation="0dp"/>

            <!-- DELETE ACCOUNT (Small text link below logout) -->
            <TextView
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:gravity="center"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:padding="16dp"
                android:layout_marginTop="8dp"/>

            <!-- VERSION INFO -->
            <TextView
                android:id="@+id/tvAppVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:gravity="center"
                android:textColor="#BDBDBD"
                android:textSize="12sp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
