<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/pastel_purple"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@id/toolbar">

            <!-- Header Background -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pastel_purple"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <!-- Profile Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="50dp"
                android:paddingBottom="@dimen/spacing_large"
                android:paddingHorizontal="@dimen/spacing_medium"
                app:layout_collapseMode="parallax">

                <!-- Profile Photo (Left) -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_medium">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePhoto"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@drawable/ic_person"
                        app:civ_border_color="@color/text_white"
                        app:civ_border_width="3dp" />

                </FrameLayout>

                <!-- Profile Details (Right) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Name"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_size_heading"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvProfileEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="email@example.com"
                        android:textColor="@color/text_white"
                        android:alpha="0.8"
                        android:textSize="@dimen/text_size_small" />

                    <!-- Total Matches (Highlight Added) -->
                    <LinearLayout
                        android:id="@+id/layoutTotalMatches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_chip_transparent_white"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tvTotalMatches"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Matches"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvProfileBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Add your bio..."
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_size_body"
                        android:maxLines="3"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Toolbar - This stays visible when collapsed -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Small Profile Photo for Collapsed State -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePhotoSmall"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_person"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/tvToolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Profile"
                        android:textColor="@color/text_white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">



            <!-- Academic Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ“ Academic Information"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:background="@color/divider" />

                    <!-- University -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="University"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/tvUniversity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Major -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Major"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/tvMajor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Semester & GPA Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Semester"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvSemester"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:text="â€”"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GPA"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvGpa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:text="â€”"
                                android:textColor="@color/pastel_purple"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Skills Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Skills"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:background="@color/divider" />

                    <!-- Skills I Can Teach -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills I Can Teach"
                        android:textColor="@color/pastel_purple"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/tvSkillsOffered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No skills added yet"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_body"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <!-- Skills I Want to Learn -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills I Want to Learn"
                        android:textColor="@color/pastel_pink"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/tvSkillsWanted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No skills added yet"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_body" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Preferences Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš™ï¸ Study Preferences"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:background="@color/divider" />

                    <!-- Learning Style -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Learning Style"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/tvLearningStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body"
                            android:textStyle="bold"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- Preferred Study Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Preferred Time"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/tvStudyTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Session Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Session Duration"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/tvSessionDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Group Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Group Size"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/tvGroupSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Pace Preference -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pace"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/tvPace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Goals & Motivation Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Goals &amp; Motivation"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:background="@color/divider" />

                    <!-- Target GPA & Weekly Hours -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_medium">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target GPA"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvTargetGpa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:text="â€”"
                                android:textColor="@color/pastel_purple"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly Study Goal"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvWeeklyHours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:text="â€”"
                                android:textColor="@color/pastel_pink"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Learning Goals -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learning Goals"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginBottom="@dimen/spacing_tiny" />

                    <TextView
                        android:id="@+id/tvLearningGoals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No goals set yet"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_large">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditProfile"
                    style="@style/Widget.CircleBloom.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:background="@drawable/button_gradient"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_person"
                    app:iconGravity="textStart"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    style="@style/Widget.CircleBloom.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="textStart"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.CircleBloom.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/error"
                    app:strokeColor="@color/error"
                    app:iconTint="@color/error" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
