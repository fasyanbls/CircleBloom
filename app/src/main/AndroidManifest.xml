<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Storage Permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".CircleBloomApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CircleBloom_Branch"
        tools:targetApi="31">

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".views.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CircleBloom.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".views.activities.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Register Activity -->
        <activity
            android:name=".views.activities.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- Forgot Password Activity -->
        <activity
            android:name=".views.activities.ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Onboarding Activity -->
        <activity
            android:name=".views.activities.OnboardingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activity -->
        <activity
            android:name=".views.activities.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <!-- Match Detail Activity -->
        <activity
            android:name=".views.activities.MatchDetailActivity"
            android:exported="false"
            android:parentActivityName=".views.activities.MainActivity" />

        <!-- Chat Activity -->
        <activity
            android:name=".views.activities.ChatActivity"
            android:exported="false"
            android:parentActivityName=".views.activities.MatchDetailActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Settings Activity -->
        <activity
            android:name=".views.activities.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".views.activities.MainActivity" />

        <!-- Notifications Activity -->
        <activity
            android:name=".views.activities.NotificationsActivity"
            android:exported="false"
            android:parentActivityName=".views.activities.MainActivity" />

        <!-- Session Detail Activity -->
        <activity
            android:name=".views.activities.SessionDetailActivity"
            android:exported="false"
            android:parentActivityName=".views.activities.MainActivity" />

        <!-- Edit Profile Activity -->
        <activity
            android:name=".views.activities.EditProfileActivity"
            android:exported="false"
            android:parentActivityName=".views.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Services -->
        <service 
            android:name=".services.StopwatchService" 
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- FileProvider for Camera -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
