<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:gravity="center_vertical">

        <!-- Session Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/background_secondary"
            android:layout_marginEnd="@dimen/spacing_medium">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_school"
                android:tint="@color/primary"
                android:contentDescription="Session icon" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Session Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Study Session" />

            <TextView
                android:id="@+id/tvOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                tools:text="Hosted by John Doe" />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Dec 20, 2024 â€¢ 14:00" />

        </LinearLayout>

        <!-- Status Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/pastel_blue"
            app:chipStrokeWidth="0dp"
            style="@style/Widget.MaterialComponents.Chip.Action"
            tools:text="Scheduled" />

    </LinearLayout>

    <!-- Hidden fields for compatibility -->
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvQuota"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnManage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</com.google.android.material.card.MaterialCardView>
